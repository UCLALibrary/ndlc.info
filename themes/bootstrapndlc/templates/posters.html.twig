{% extends 'partials/base.html.twig' %}
{% set posters = page.collection({'content.items':{'@taxonomy.category': 'poster'},'order': {'by': 'default','dir':'asc'}}) %}
{% block content %}
<!-- Begin page content -->
<!-- Small jumbotron for interior pages-->
<div class="hero-unit-sm">
    <div class="container">
    </div></div>
<div class="container">
    <div class="row">
        <div class="col-md-1 col-sm-12">
            <div class="col-md-1 col-sm-12">
                {% block submenu %}
                    {% include 'partials/program-submenu.html.twig' %}
                {% endblock %}
            </div>
        </div>
        <div class="col-md-9">
            <h3>{{ page.title }}</h3>
            <table>
                <tr>
                    <th>Title</th>
                    <th width=40%>Presenter(s)</th>
                    <th>Track</th>
                </tr>

                {% for session in taxonomy.findTaxonomy({'category':'poster'}) %}

                    <tr>
                        <td><a href="{{ base_url_absolute }}{{ session.route }}">{{ session.title }}</a></td>
                        <td>
                            <ul>
                                {% for presenter in session.header.taxonomy.presenters %}
                                    <li>{{ presenter.name }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>
                            <ul>
                                {% for track in session.header.taxonomy.track %}
                                    <li>{{ track }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-md-1">
            <div class="circular-sess"></div>
        </div>
    </div></div>
{% endblock %}



