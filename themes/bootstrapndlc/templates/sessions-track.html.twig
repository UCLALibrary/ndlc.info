{% extends 'partials/base.html.twig' %}
{% block content %}
    <!-- Begin page content -->
    <!-- Small jumbotron for interior pages-->
    <div class="hero-unit-sm">
        <div class="container">
        </div></div>
    <div class="container">
        <div class="row">
            <div class="col-md-1 col-sm-12">
                <div class="ribbon">
                    <ul class="list-inline">
                        <a class="sub-head" <a href="{{ base_url_absolute }}/program/">ALL
                            SESSIONS</a><br />

                        {% for p in page.find('/program').children if p != page %} <li><a href="{{p.url}}/">{{ p
                                .title}}</a></li>
                        {% endfor %}
                    </ul>
                </div></div>
            <div class="col-md-7">
                <ul class="sans-bullets">
                    <li><h3>{{ header.title }}</h3>
                    </li>
                    <li><strong>Presenters</strong>:
                        <ul class="sans-bullets">
                            {% for presenter in header.taxonomy.presenters %}
                                <li>{{ presenter.name }}, <i>{{ presenter.title }}</i></li>
                            {% endfor %}
                        </ul>
                    <li><strong>Description</strong>: {{ page.content }}
                    <li><strong>Format</strong>: {{ header.taxonomy.format }}</li>
                    <li><strong>Track</strong>:
                        <ul class="sans-bullets">
                            {% for track in header.taxonomy.track %}
                                <li>{{ track }}</li>
                            {% endfor %}
                        </ul>
                        <ul class="sans-bullets">
                            {% for track in session.header.taxonomy.track %}
                            <li>{{ track }}</li>
                        </ul>
                        {% endfor %}
                    </li>
                </ul>
            </div>
            <div class="col-md-1">
                <div class="circular-sess"></div>
            </div>
        </div></div>
{% endblock %}